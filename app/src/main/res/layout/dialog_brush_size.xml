<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    >
    <ImageButton
        android:id="@+id/ib_small1_brush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="image_small1"
        android:background="@android:color/white"
        android:src="@drawable/small1"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ib_small2_brush"
        />
    <ImageButton
        android:id="@+id/ib_small2_brush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="image_small2"
        android:background="@android:color/white"
        android:src="@drawable/small2"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/ib_small1_brush"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ib_small_brush"
        />
    <ImageButton
        android:id="@+id/ib_small_brush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="image_small"
        android:background="@android:color/white"
        android:src="@drawable/small"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/ib_small2_brush"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ib_medium1_brush"
        />
    <ImageButton
        android:id="@+id/ib_medium1_brush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="image_medium1"
        android:src="@drawable/medium1"
        android:padding="10dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/ib_small_brush"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ib_medium_brush"
        />
    <ImageButton
        android:id="@+id/ib_medium_brush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="image_medium"
        android:src="@drawable/medium"
        android:padding="10dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/ib_medium1_brush"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ib_large_brush"
        />
    <ImageButton
        android:id="@+id/ib_large_brush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="image_large"
        android:src="@drawable/large"
        android:padding="10dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/ib_medium_brush"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />
</androidx.constraintlayout.widget.ConstraintLayout>